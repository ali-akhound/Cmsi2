@model AVA.Web.Mvc.Models.SocietyExecutorListViewModel
@using AVA.UI.Helpers.Common;
<update-title title="{{'SocietyDirector' | translate}}"></update-title>
<update-meta property="og:title" content="{{'SocietyDirector' | translate}}"></update-meta>
<update-meta name="description" content="{{'HeaderTitle'| translate}}-{{'SocietyDirector' | translate}}"></update-meta>
<update-meta itemprop="description" content="{{'HeaderTitle'| translate}}-{{'SocietyDirector' | translate}}"></update-meta>
<update-meta name="keywords" content="{{'HeaderTitle'| translate}},{{'SocietyDirector' | translate}}"></update-meta>
<update-script content="structuredData" type="application/ld+json"></update-script>
<div id="content">
    <div class="container">
        <h3 class="title-divider">
            <span>{{$state.current.title | translate}}</span>
        </h3>
        <div class="row mb-5">
            @{
                foreach (var member in Model.SocietyExecutors)
                {
                    <div class="col-md-2 col-sm-4 p-2">
                        <img src="@(member.PersonalImageUrl != "" ? Url.Content(member.PersonalImageUrl) : "")" alt="@(member.Name + " " + member.Family)" class="img-fluid border-white border-w-5" />
                    </div>
                    <div class="col-md-4 col-sm-8  flex-valign p-2 ">
                        <h5 class="text-uppercase   mt-0 mb-1 text-inverse font-weight-bold">@(member.Name + " " + member.Family)</h5>
                        <hr class="hr-primary w-70 mr-0 ml-md-auto mr-md-0 mb-3" />
                        <label>@CommonHelper.GetDisplayName(Model.SingleSocietyExecutor, m => m.Email):<span>@(member.Email)</span></label>
                        <!-- Post share links -->
                        <div class="mt-3">
                            @if (member.ResumeUrl != "")
                            {
                                <a class="mb-1 btn btn-outline-green-bright btn-rounded border-w-2" href="@(member.ResumeUrl != "" ? Url.Content(member.ResumeUrl) : "")">
                                    <i class="fa fa-download fa-1x pl-2"></i>@CommonHelper.GetDisplayName(Model.SingleSocietyExecutor, m => m.ResumeUrl)
                                </a>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>