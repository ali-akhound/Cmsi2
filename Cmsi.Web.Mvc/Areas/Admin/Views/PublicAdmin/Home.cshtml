@{
    ViewBag.Title = "Home Page";
}
@using AVA.UI.Helpers.CustomAttribute;
@using AVA.UI.Helpers.Controller;

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>{{ 'Home' | translate }}</h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content text-center p-md">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <ul class="today-datas">
                                @if (new AVA.UI.Helpers.CustomAttribute.AuthorizeUserAttribute() { AccessLevelID = (int)ControllerHelper.SysModuleType.News }.HasAccess(new HttpContextWrapper(HttpContext.Current)))
                                {
                                    <li class="fa fa-bullhorn fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                        <a class="col-lg-12 homeIconText" ui-sref="NewsManagement">
                                            {{ 'NewsManagement' | translate }}
                                        </a>
                                    </li>
                                }
                                @if (new AVA.UI.Helpers.CustomAttribute.AuthorizeUserAttribute() { AccessLevelID = (int)ControllerHelper.SysModuleType.Managment }.HasAccess(new HttpContextWrapper(HttpContext.Current)))
                                {
                                    <li class="fa fa-rss fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                        &nbsp;
                                        <a class="col-lg-12 homeIconText" ui-sref="MailTemplate">
                                            {{ 'MailTemplate' | translate }}
                                        </a>
                                    </li>
                                }
                                @*<li class="fa fa-picture-o fa-5x col-md-2 col-sm-6">
            <a class="col-lg-12 homeIconText" href="ManageImageGallery.aspx">
                تصاویر اسلایدر
            </a>
        </li>*@
                                @if (new AVA.UI.Helpers.CustomAttribute.AuthorizeUserAttribute() { AccessLevelID = (int)ControllerHelper.SysModuleType.Referee }.HasAccess(new HttpContextWrapper(HttpContext.Current)))
                                {
                                    <li class="fa fa-user-circle-o fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                        <a class="col-lg-12 homeIconText" ui-sref="RefereeManagement">
                                            {{ 'RefereeManagement' | translate }}
                                        </a>
                                    </li>
                                }
                                @if (new AVA.UI.Helpers.CustomAttribute.AuthorizeUserAttribute() { AccessLevelID = (int)ControllerHelper.SysModuleType.Conference }.HasAccess(new HttpContextWrapper(HttpContext.Current)))
                                {
                                    <li class="fa fa-sitemap fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                        <a class="col-lg-12 homeIconText" ui-sref="ConferenceCategoryManagement({TableName: 'Conference', ParentID: '-1'})">
                                            {{ 'ConferenceCategoryManagement' | translate }}
                                        </a>
                                    </li>
                                    <li class="fa fa-group fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                        <a class="col-lg-12 homeIconText" ui-sref="ConferenceManagement">
                                            {{ 'ConferenceManagement' | translate }}
                                        </a>
                                    </li>
                                }
                                @if (new AVA.UI.Helpers.CustomAttribute.AuthorizeUserAttribute() { AccessLevelID = (int)ControllerHelper.SysModuleType.Article }.HasAccess(new HttpContextWrapper(HttpContext.Current)))
                                {
                                    <li class="fa fa-folder-open fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                        <a class="col-lg-12 homeIconText" ui-sref="ArticleManagement({ConferenceID: '-1'})">
                                            {{ 'ArticleManagement' | translate }}
                                        </a>
                                    </li>
                                }
                                @*@if (new AVA.UI.Helpers.CustomAttribute.AuthorizeUserAttribute() { AccessLevelID = (int)ControllerHelper.SysModuleType.Vote }.HasAccess(new HttpContextWrapper(HttpContext.Current)))
                                {
                                    <li class="fa fa-gavel fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                        <a class="col-lg-12 homeIconText" ui-sref="Vote">
                                            {{ 'Vote' | translate }}
                                        </a>
                                    </li>
                                }*@

                                
                                <li class="fa fa-lock fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                    <a class="col-lg-12 homeIconText" ui-sref="ChangePass">
                                        {{'ChangePass' | translate}}
                                    </a>
                                </li>
                                <li class="fa fa-power-off fa-5x col-md-2 col-sm-6 col-xs-12 HomeIcon">
                                    <a class="col-lg-12 homeIconText" ng-click="SignOut('@Url.Action("SignOut", "PublicAdmin")','@Url.Action("Index", "PublicAdmin")')" ng-controller="MyLayoutController">
                                        {{ 'Logout' | translate }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>